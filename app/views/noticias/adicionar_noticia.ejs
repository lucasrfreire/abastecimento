<!DOCTYPE html>
    <html lang="pt-br">
        <head>
            <meta charset="utf-8">
            <titleFormulário de inclusão de notícia></title>
        </head>
        <body>
            <h1>Adicionar Notícia</h1>
            <br>

            <% if(validacao) { %>
                <ul>
                    <% for(var i = 0; i < validacao.length; i++){%>
                        <li>
                            <%= validacao[i].msg %>
                        </li>
                    <%}%>
                </ul>
            <% } %>
            <form action="/noticias/salvar" method="POST">
                <label>Título da Notícia</label>
                <input type="text" name="titulo" id="titulo" value="<%=noticia.titulo%>" placeholder="Titulo da Notícia">
                <br>
                <label>Resumo da Notícia</label>
                <input type="text" name="resumo" id="resumo" value="<%=noticia.resumo%>" placeholder="Resumo da Notícia">
                <br>
                <label>Autor da Notícia</label>
                <input type="text" name="autor" id="autor" value="<%=noticia.autor%>" placeholder="Autor da Notícia">
                <br>
                <label>Data dos fatos</label>
                <input type="date" name="data_noticia" id="data_noticia" value="<%=noticia.data_noticia%>" placeholder="Data dos fatos">
                <br>
                <label>Notícia</label>
                <textarea id="noticia" name="noticia" rows="5" cols="30"><%=noticia.noticia%></textarea>
                <br>
                <input type="submit" value="enviar" id="enviar"/>
            </form>

        </body>
    </html>